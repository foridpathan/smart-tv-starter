{
  "name": "smart-tv-starter",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "homepage": "https://foridpathan.github.io/smart-tv-starter",
  "scripts": {
    "dev": "vite",
    "copy:tizen": "node config/index.cjs tizen && node --experimental-modules config/tizen-script.cjs",
    "copy:webos": "node config/index.cjs webos && node --experimental-modules config/webos-script.cjs && node config/fhd-script.cjs",
    "platform:tizen": "export WEBPACK_MODE=tizen tsc && vite build ",
    "platform:webos": "export WEBPACK_MODE=webos tsc && vite build",
    "platform:production": "tsc && vite build",
    "build": "npm-run-all --sequential platform:*",
    "lint": "eslint .",
    "preview": "vite preview",
    "deploy": "gh-pages -d build"
  },
  "dependencies": {
    "@noriginmedia/norigin-spatial-navigation": "^2.2.1",
    "npm-run-all": "^4.1.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.27.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@types/node": "^22.8.5",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "browserslist": "^4.24.2",
    "esbuild-plugin-browserslist": "^0.15.0",
    "eslint": "^9.13.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "fs-extra": "^11.2.0",
    "gh-pages": "^6.2.0",
    "globals": "^15.11.0",
    "ncp": "^2.0.0",
    "path": "^0.12.7",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "tailwindcss-animate": "^1.0.7",
    "terser": "^5.36.0",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.11.0",
    "vite": "^5.4.10"
  }
}
